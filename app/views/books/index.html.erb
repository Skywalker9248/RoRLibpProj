
<p style="color: green"><%= notice %></p>

<h1>Books</h1>
<div style="margin-left: 10px;margin-top: 10px;">
<button type="button" class="btn btn-dark">
<%= link_to "New book", new_book_path %></button>
</div>
<div class="row row-cols-1 row-cols-md-3 g-4" id="books" style="margin:1vw">
  <% @books.each do |book| %>
    <div class="card text-white bg-dark " style="width: 250px; border-radius: 25px ;margin-left: 10px;margin-top: 10px;padding:15px;">
     <%= render book %>
      <p>
      <button>
        <%= link_to "Show this book", book %>
      </button>
      </p>
    </div>  
  <% end %>
  
</div>


